<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="147dp"
        android:layout_height="141dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218"
        app:srcCompat="@drawable/bin3agool" />

    <EditText
        android:id="@+id/login_pin"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="Enter Your PIN"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="473dp"
        android:layout_height="305dp"
        android:orientation="horizontal"
        android:paddingLeft="46dp"
        android:paddingTop="15dp"
        android:paddingRight="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pin">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerlogin"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="141dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:background="@drawable/cornerfinger"
            android:backgroundTint="#1B4380"
            app:srcCompat="@drawable/finger" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
